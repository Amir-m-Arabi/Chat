generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin{
  id Int @id @default(autoincrement())
  username String
  password String
}


model User{
  id Int @id @default(autoincrement())
  username String
  password String
  email String @unique
  profileURL String
  entryCode EntryCode[]
  followChannels FollowChannels[]
}

model EntryCode{
  id Int @id @default(autoincrement())
  code String
  user User @relation(fields: [userId], references: [id])
  userId Int
}







model CreateChannel{
  id Int @id @default(autoincrement())
  channelName String
  profileURL String
  description String
  superAdminId String
  channelAdmins ChannelAdmins[]
  followChannels FollowChannels[]
  channelContent ChannelContent[]
}

model ChannelAdmins{
  id Int @id @default(autoincrement())
  adminId String
  createChannel CreateChannel @relation(fields: [channelId], references: [id] , onDelete: Cascade)
  channelId Int
}

model FollowChannels{
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  createChannel CreateChannel @relation(fields: [channelId], references: [id] , onDelete: Cascade)
  channelId Int
}

model ChannelContent{
  id Int @id @default(autoincrement())
  senderId String
  content String @default("")
  video Video[]
  image Image[]
  audio Audio[]
  createChannel CreateChannel @relation(fields: [channelId], references: [id] , onDelete: Cascade)
  channelId Int
  createdAt DateTime @default(now())
}







model Contact{
 id Int @id @default(autoincrement())
 firstPersonID String
 secondPersonID String
 chat ChatContent[]
}

model ChatContent{
  id Int @id @default(autoincrement())
  contact Contact @relation(fields:[chatId] , references:[id])
  chatId Int
  senderId String
  content String
  video Video[]
  image Image[]
  audio Audio[]
  isEdited Boolean @default(false)
  createdAt DateTime @default(now())
}





model Group{
  id Int @id @default(autoincrement())
  groupName String
  description String @default("")
  profileURL String @default("")
  adminId String
  groupMember GroupMember[]
  groupChats GroupChats[]
}

model GroupMember{
  id Int @id @default(autoincrement())
  memberId String
  group Group @relation(fields:[groupId] , references:[id])
  groupId Int
}

model GroupChats{
  id Int @id @default(autoincrement())
  senderId String
  content String
  isEdited Boolean @default(false)
  video Video[]
  image Image[]
  audio Audio[]
  createdAt DateTime @default(now())
  group Group @relation(fields:[groupId] , references:[id])
  groupId Int
}




model Video{
  id Int @id @default(autoincrement())
  videoURL String
  channelContent ChannelContent @relation(fields: [contentId], references: [id] , onDelete: Cascade)
  contentId Int
  chatContent ChatContent @relation(fields: [chatId], references: [id] , onDelete: Cascade)
  chatId Int
  groupChats GroupChats @relation(fields: [groupChatId], references: [id] , onDelete: Cascade)
  groupChatId Int
}

model Image{
  id Int @id @default(autoincrement())
  imageURL String
  channelContent ChannelContent @relation(fields: [contentId], references: [id] , onDelete: Cascade)
  contentId Int
  chatContent ChatContent @relation(fields: [chatId], references: [id] , onDelete: Cascade)
  chatId Int
  groupChats GroupChats @relation(fields: [groupChatId], references: [id] , onDelete: Cascade)
  groupChatId Int
}

model Audio{
  id Int @id @default(autoincrement())
  audioURL String
  channelContent ChannelContent @relation(fields: [contentId], references: [id] , onDelete: Cascade)
  contentId Int
  chatContent ChatContent @relation(fields: [chatId], references: [id] , onDelete: Cascade)
  chatId Int
  groupChats GroupChats @relation(fields: [groupChatId], references: [id] , onDelete: Cascade)
  groupChatId Int
}
