generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin{
  id Int @id @default(autoincrement())
  username String
  password String
}


model User{
  id Int @id @default(autoincrement())
  username String
  password String
  email String @unique
  entryCode EntryCode[]
  channels Channels[]
}

model EntryCode{
  id Int @id @default(autoincrement())
  code String
  user User @relation(fields: [userId], references: [id])
  userId Int
}

model Channels{
  id Int @id @default(autoincrement())
  channelName String
  profileImage String
  user User @relation(fields: [userId], references: [id])
  userId Int
}

