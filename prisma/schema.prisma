generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin{
  id Int @id @default(autoincrement())
  username String
  password String
}


model User{
  id Int @id @default(autoincrement())
  username String
  password String
  email String @unique
  profileURL String
  entryCode EntryCode[]
  createChannel CreateChannel[]
  followChannels FollowChannels[]
}

model EntryCode{
  id Int @id @default(autoincrement())
  code String
  user User @relation(fields: [userId], references: [id])
  userId Int
}

model CreateChannel{
  id Int @id @default(autoincrement())
  channelName String
  profileURL String
  description String
  user User @relation(fields: [userId], references: [id])
  userId Int
  followChannels FollowChannels[]
}

model FollowChannels{
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  createChannel CreateChannel @relation(fields: [channelId], references: [id])
  channelId Int
}

model Contact{
 id Int @id @default(autoincrement())
 firstPersonID String
 secondPersonID String
 chat ChatContent[]
}

model ChatContent{
  id Int @id @default(autoincrement())
  contact Contact @relation(fields:[chatId] , references:[id])
  chatId Int
  senderId String
  content String
  isEdited Boolean @default(false)
  createdAt DateTime @default(now())
}


model Group{
  id Int @id @default(autoincrement())
  groupName String
  description String @default("")
  profileURL String @default("")
  adminId String
  groupMember GroupMember[]
  groupChats GroupChats[]
}

model GroupMember{
  id Int @id @default(autoincrement())
  memberId String
  group Group @relation(fields:[groupId] , references:[id])
  groupId Int
}

model GroupChats{
  id Int @id @default(autoincrement())
  senderId String
  content String
  isEdited Boolean @default(false)
  createdAt DateTime @default(now())
  group Group @relation(fields:[groupId] , references:[id])
  groupId Int
}


